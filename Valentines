<script>
// CHANGE THIS PASSWORD
const correctPassword = "capybara";

function checkPassword() {
    const input = document.getElementById("passwordInput").value;
    if(input === correctPassword) {
        document.getElementById("passwordScreen").classList.add("hidden");
        document.getElementById("mainContent").classList.remove("hidden");
    } else {
        document.getElementById("error").innerText = "Wrong password ğŸ¥º";
    }
}

// Floating hearts
setInterval(() => {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = "ğŸ’–";
    heart.style.left = Math.random() * 100 + "vw";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 6000);
}, 500);

// Runaway No button
const noBtn = document.getElementById("noBtn");
noBtn.addEventListener("mouseover", () => {
    noBtn.style.position = "absolute";
    noBtn.style.left = Math.random() * 80 + "%";
    noBtn.style.top = Math.random() * 80 + "%";
});

// Show options + confetti
function showOptions() {
    document.getElementById("question").classList.add("hidden");
    document.getElementById("options").classList.remove("hidden");
    launchConfetti();
}

function launchConfetti() {
    for (let i = 0; i < 80; i++) {
        const confetti = document.createElement("div");
        confetti.classList.add("confetti");
        confetti.style.left = Math.random() * 100 + "vw";
        confetti.style.background =
        ["#ff0","#f00","#0f0","#00f","#ff69b4"][Math.floor(Math.random()*5)];
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 3000);
    }
}

function showCard(type) {
    let content = "";
    if(type === "love") {
        content = `<div class="card">
        <h2>I Love You Jesus â¤ï¸</h2>
        <p>You are my favorite person in the entire world. 
        Iâ€™d choose you in every lifetime ğŸ¹ğŸŒ¹</p>
        </div>`;
    }
    if(type === "collage") {
        content = `<div class="card collage">
        <h2>Our Memories ğŸ¹ğŸ“¸</h2>
        <img src="https://via.placeholder.com/150">
        <img src="https://via.placeholder.com/150">
        <img src="https://via.placeholder.com/150">
        </div>`;
    }
    if(type === "letter") {
        content = `<div class="card">
        <h2>My Valentine Letter ğŸ’</h2>
        <textarea rows="6">Jesus, from the moment we met...</textarea>
        </div>`;
    }
    document.getElementById("cardDisplay").innerHTML = content;
}
</script>

